<%- include('header') %>
<h2>
    Nova vaga:
    <a href="/admin/vagas">Vagas</a>
</h2>
<div>
    <form method="POST">
        <label>Titulo:</label>
        <input type="text" name="titulo" value="<%= vaga.titulo %>">
        <label>Descricao:</label>
        <textarea name="descricao"><%= vaga.descricao %></textarea>
        <label>Categoria</label>
        <select name="categoria">
            <% categorias.forEach( categoria => { %>
            <option value="<%= categoria.id %>" 
                <% if (categoria.id == vaga.categoria) { %>
                    selected
                <% } %> 
            >
            <%= categoria.categoria %>
            </option>
            <% }) %>
        </select>
        <button>Salvar vaga</button>
    </form>
</div>
<%- include('footer') %>